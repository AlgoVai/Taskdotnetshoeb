@model TeamsCrudOperation.Models.TeamInfo;
@{
    ViewData["Title"] = "DeleteTeam";
}

<h1>DeleteTeam</h1>



<p>Are you sure you want to delete the following team?</p>

<div>
    <h4>Team Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeamName)
        </dd>
        <!-- Add other properties as needed -->
    </dl>
    <form asp-action="DeleteTeam" asp-controller="Home" method="post">
        <input type="hidden" asp-for="TeamId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="GetTeamInfo" asp-controller="Home" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
