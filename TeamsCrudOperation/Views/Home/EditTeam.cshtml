@model TeamsCrudOperation.Models.TeamInfo
@{
    ViewData["Title"] = "EditTeam";
}

<h1>EditTeam</h1>


<form asp-action="EditTeam" method="post">
    <div class="form-group">
        <label asp-for="TeamId" class="control-label"></label>
        <input asp-for="TeamId" class="form-control" />
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeamName" class="control-label"></label>
        <input asp-for="TeamName" class="form-control" />
        <span asp-validation-for="TeamName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
</form>
