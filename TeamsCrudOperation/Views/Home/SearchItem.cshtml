@model List<TeamInfo>
@{
    ViewData["Title"] = "SearchItem";
}




<h2 style="color:whitesmoke">Search Results</h2>

@if (Model != null && Model.Count > 0)
{
    <table style="width: 100%; background-color:aqua">
        <colgroup>
            <col style="width: 20%;">
            <col style="width: 20%;">
            <col style="width: 40%;">
            <col style="width: 20%;">
        
        </colgroup>
        <tr>
            <td>
                Name
            </td>
            <td>
                Description
            </td>
        <tbody style="background-color:azure">
            @foreach (var team in Model)
            {
                <tr style="color:olive">

                    <td>
                            @team.TeamName
                    </td>
                    <td>
                            @team.Description
                    </td>
                  

                </tr>
            }
        </tbody>
    </table>
    <a href="/Home/GetTeamInfo">Back</a>
}

else
{
    <p>@ViewBag.Message</p> <!-- Display message if no results or error occurred -->
}


